# ===========================================
# BOLT INNOVATORS - Smart Waste Classification System
# Environment Configuration
# ===========================================

# === Flask Settings ===
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=False

# === Server Settings ===
HOST=0.0.0.0
PORT=5000

# === Model Settings ===
# Path to your trained model file inside the repo
MODEL_PATH=models/best_mobilenetv2_model.keras
CONFIDENCE_THRESHOLD=0.7

# === CORS Settings (for frontend integration) ===
# Comma-separated list of allowed origins
# Use * to allow all
CORS_ALLOWED_ORIGINS=*

# === External AI API Keys (Optional) ===
# Gemini API key (https://makersuite.google.com/app/apikey)
# GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API key (https://platform.openai.com/api-keys)
# OPENAI_API_KEY=your_openai_api_key_here

# === AI Integration Settings ===
# Set to true to prioritize external AI APIs over local model
PRIORITIZE_EXTERNAL_AI=false
