# BOLT INNOVATORS - Smart Waste Classification System
# Environment Configuration

# Flask Settings
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True

# Server Settings
HOST=0.0.0.0
PORT=5000

# Model Settings
MODEL_PATH=best_mobilenetv2_model.keras
CONFIDENCE_THRESHOLD=0.7

# CORS Settings (for integration with existing websites)
# Comma-separated list of allowed origins
# Example: CORS_ALLOWED_ORIGINS=http://example.com,https://yourdomain.com
CORS_ALLOWED_ORIGINS=*

# External AI API Keys
# Get your Gemini API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get your OpenAI API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI Integration Settings
# Set to 'true' to prioritize external AI APIs over local model
PRIORITIZE_EXTERNAL_AI=false